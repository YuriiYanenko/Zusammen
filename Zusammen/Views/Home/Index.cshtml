@{
    ViewData["Title"] = "Головна";
}
<div style="width: 90px;height: 90px;background-color: red"></div>
<div class="text-center">
  <div class="slides-container">
      <div class="slide" data-slide>  
          @using (Html.BeginForm("FilmView", "Home", new { filmId = 1 }))
          {
              <button style=" background: none; border: none; width: 100%; height: 100%;">
                  <img src="../img/Napoleon.jpg" alt="Image">
              </button>
          }
      </div>
      <div class="slide" data-slide>
          @using (Html.BeginForm("FilmView", "Home", new { filmId = 7 }))
          { 
              <button style=" background: none; border: none; width: 100%; height: 100%;">
                  <img src="../img/NunII.jpg" alt="Image">
              </button>
          }
      </div>
      <div class="slide" data-slide>
          @using (Html.BeginForm("FilmView", "Home", new { filmId = 3 }))
                   { 
                       <button style=" background: none; border: none; width: 100%; height: 100%;">
                           <img src="../img/Casablanca.jpg" alt="Image">
                       </button>
                   }
      </div>
      <div class="slide" data-slide>
          @using (Html.BeginForm("FilmView", "Home", new { filmId = 8 }))
                   { 
                       <button style=" background: none; border: none; width: 100%; height: 100%;">
                           <img src="../img/Bird_Box.jpg" alt="Image">
                       </button>
                   }
      </div>
  </div>
  <button class="btn previous" data-button="previous">
          <img src="../img/left.ico" style="width: 20px; height: 20px;">
      </button>
  <button class="btn next" data-button="next">
      <img src="../img/right.ico" style="width: 20px; height: 20px;">
  </button>
  <p>Рекомендації</p>
  <div class="cont">
  <div class="image-container">
      <img src="../img/film1.png" alt="Image">
      <div class="image-caption">Велика сім'я</div>
  </div>
  <div class="image-container">
      <img src="../img/film2.png" alt="Image">
      <div class="image-caption">Людина невидимка. Повернення</div>
  </div>
  <div class="image-container">
      <img src="../img/film3.png" alt="Image">
      <div class="image-caption">Диявол носить Прада</div>
      </div>
  </div>  
</div>