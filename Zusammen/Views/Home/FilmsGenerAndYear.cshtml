                <label class="labfilt"><input class="checkbox-filter" type="checkbox" name="genreArray" value="Драми"/>  Драми</label><br/>
                <label class="labfilt"><input class="checkbox-filter" type="checkbox" name="genreArray" value="Історичні"/>  Історичні</label><br/>
                <label class="labfilt"><input class="checkbox-filter" type="checkbox" name="genreArray" value="Комедія"/> Комедія</label><br/>
                <label class="labfilt"><input class="checkbox-filter" type="checkbox" name="genreArray" value="Біографія"/>  Біографія</label><br/>
                <label class="labfilt"><input class="checkbox-filter" type="checkbox" name="genreArray" value="Трилери"/>  Трилери</label><br/>
                <label class="labfilt"><input class="checkbox-filter" type="checkbox" name="genreArray" value="Мелодрами"/>  Мелодрами</label><br/>
                <label class="labfilt"><input class="checkbox-filter" type="checkbox" name="genreArray" value="Сімейні"/>  Сімейні</label><br/>
                <label class="labfilt"><input class="checkbox-filter" type="checkbox" name="genreArray" value="Фантастика"/>  Фантастика</label><br/>
                <label class="labfilt"><input class="checkbox-filter" type="checkbox" name="genreArray" value="Жахи"/>  Жахи</label><br/>
                <label class="labfilt"><input class="checkbox-filter" type="checkbox" name="genreArray" value="Кримінал"/>  Кримінал</label><br/>
                <label class="labfilt"><input class="checkbox-filter" type="checkbox" name="genreArray" value="Фентазі"/>  Фентазі</label><br/>
                <label class="labfilt"><input class="checkbox-filter" type="checkbox" name="genreArray" value="Військові"/>  Військові</label><br/>
                <label class="labfilt"><input class="checkbox-filter" type="checkbox" name="genreArray" value="Спортивні"/>  Спортивні</label><br/>
                <label class="labfilt"><input class="checkbox-filter" type="checkbox" name="genreArray" value="Романтика"/>  Романтика</label><br/>

                <!-- Введення значень фільма від і до-->
                <h3 style="font-size: 30px; padding-top: 20px" class="h3films">Роки</h3>
                <label class="labfilt"><input class="checkbox-filter" type="checkbox" name="yearArray" value="2016, 2024"/>  2016-2024</label><br/>
                <label class="labfilt"><input class="checkbox-filter" type="checkbox" name="yearArray" value="2010, 2016"/>  2010-2016</label><br/>
                <label class="labfilt"><input class="checkbox-filter" type="checkbox" name="yearArray" value="2000, 2010"/>  2000-2010</label><br/>
                <label class="labfilt"><input class="checkbox-filter" type="checkbox" name="yearArray" value="1990, 2000"/>  1990-2000</label><br/>
                <label class="labfilt"><input class="checkbox-filter" type="checkbox" name="yearArray" value="1980, 1990"/>  1980-1990</label><br/>
                <label class="labfilt"><input class="checkbox-filter" type="checkbox" name="yearArray" value="1900, 1980"/>  До 80-х</label><br/>
                <input type="hidden" id="minYear" name="minYear" />
                <input type="hidden" id="maxYear" name="maxYear" />
                <!--<input class="filter" type="submit" name="formSubmit" value="Submit" />-->
                <button id="submit-filter" type="submit" class="filter">Пошук</button>
                <script>
                    document.getElementById('submit-filter').addEventListener('click', function() {
                        var checkboxes = document.querySelectorAll('input[name="yearArray"]:checked');
                        var yearsArray = Array.from(checkboxes).map(function(checkbox) {
                            return checkbox.value.split(',').map(function(year) {
                                return parseInt(year);
                            });
                        }).flat();
                
                        if (yearsArray.length > 0) {
                            var minYear = Math.min(...yearsArray);
                            var maxYear = Math.max(...yearsArray);
                
                            document.getElementById('minYear').value = minYear;
                            document.getElementById('maxYear').value = maxYear;
                        } else {
                            minYear = 1900;
                            maxYear = 2024;
                                            
                            document.getElementById('minYear').value = minYear;
                            document.getElementById('maxYear').value = maxYear;
                        }
                    });
                </script>
            </form>
