                    {
                        <h2 class="NANfilter">Фільми за даними фільтрами не знайдено</h2>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            var path = item.image_path;
                            var movie = item.name;
                            var idfilm = item.id;
                            @using (Html.BeginForm("FilmView", "Home", new { filmId = idfilm }))
                            {
                                <li class="film-data">
                                    <button class="image-cont">
                                        <img class="image-name" style="border-radius: 20px" src="@path">
                                        <div class="overlay">
                                            <div class="text">@movie</div>
                                        </div>
                                    </button>
                                </li>
                            }
                        }
                    }
