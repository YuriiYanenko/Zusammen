<div style="width: 115%; margin-left: -100px;">
    <div class="flexdivrow" style="padding-top: 70px;">
        <div style="width: 30%; display: flex; background-size: contain;">
            <form class="filter-genre-year" asp-action="FilterFilms" asp-controller="Home" method="post" style="margin: inherit; margin-left: 40px">
                <h3 style="font-size: 30px" class="h3films">Жанри</h3>
                <input class="checkbox-filter" type="checkbox" name="genreArray" value="Екшен"/> <label class="labfilt"> Екшен</label><br/>
                <input class="checkbox-filter" type="checkbox" name="genreArray" value="Детективи"/> <label class="labfilt"> Детективи</label><br/>
                <input class="checkbox-filter" type="checkbox" name="genreArray" value="Драми"/> <label class="labfilt"> Драми</label><br/>
                <input class="checkbox-filter" type="checkbox" name="genreArray" value="Історичні"/> <label class="labfilt"> Історичні</label><br/>
                <input class="checkbox-filter" type="checkbox" name="genreArray" value="Комедія"/> <label class="labfilt"> Комедія</label><br/>
                <input class="checkbox-filter" type="checkbox" name="genreArray" value="Біографія"/> <label class="labfilt"> Біографія</label><br/>
                <input class="checkbox-filter" type="checkbox" name="genreArray" value="Трилери"/> <label class="labfilt"> Трилери</label><br/>
                <input class="checkbox-filter" type="checkbox" name="genreArray" value="Мелодрами"/> <label class="labfilt"> Мелодрами</label><br/>
                <input class="checkbox-filter" type="checkbox" name="genreArray" value="Сімейні"/> <label class="labfilt"> Сімейні</label><br/>
                <input class="checkbox-filter" type="checkbox" name="genreArray" value="Фантастика"/> <label class="labfilt"> Фантастика</label><br/>
                <input class="checkbox-filter" type="checkbox" name="genreArray" value="Жахи"/> <label class="labfilt"> Жахи</label><br/>
                <input class="checkbox-filter" type="checkbox" name="genreArray" value="Кримінал"/> <label class="labfilt"> Кримінал</label><br/>
                <input class="checkbox-filter" type="checkbox" name="genreArray" value="Фентазі"/> <label class="labfilt"> Фентазі</label><br/>
                <input class="checkbox-filter" type="checkbox" name="genreArray" value="Військові"/> <label class="labfilt"> Військові</label><br/>
                <input class="checkbox-filter" type="checkbox" name="genreArray" value="Спортивні"/> <label class="labfilt"> Спортивні</label><br/>
                <input class="checkbox-filter" type="checkbox" name="genreArray" value="Романтика"/> <label class="labfilt"> Романтика</label><br/>

                <!-- Введення значень фільма від і до-->
                <h3 style="font-size: 30px; padding-top: 20px" class="h3films">Роки</h3>
                <input class="checkbox-filter" type="checkbox" name="yearArray" value="2016, 2024"/> <label class="labfilt"> 2016-2024</label><br/>
                <input class="checkbox-filter" type="checkbox" name="yearArray" value="2010, 2016"/> <label class="labfilt"> 2010-2016</label><br/>
                <input class="checkbox-filter" type="checkbox" name="yearArray" value="2000, 2016"/> <label class="labfilt"> 2000-2016</label><br/>
                <input class="checkbox-filter" type="checkbox" name="yearArray" value="1990, 2000"/> <label class="labfilt"> 1990-2000</label><br/>
                <input class="checkbox-filter" type="checkbox" name="yearArray" value="1980, 1990"/> <label class="labfilt"> 1980-1990</label><br/>
                <input class="checkbox-filter" type="checkbox" name="yearArray" value="1900, 1980"/> <label class="labfilt"> До 80-х</label><br/>
                <input type="hidden" id="minYear" name="minYear" />
                <input type="hidden" id="maxYear" name="maxYear" />
                <!--<input class="filter" type="submit" name="formSubmit" value="Submit" />-->
                <button id="submit-filter" type="submit" class="filter">Пошук</button>
                <script>
                    document.getElementById('submit-filter').addEventListener('click', function() {
                        var checkboxes = document.querySelectorAll('input[name="yearArray"]:checked');
                        var yearsArray = Array.from(checkboxes).map(function(checkbox) {
                            return checkbox.value.split(',').map(function(year) {
                                return parseInt(year);
                            });
                        }).flat();
                
                        if (yearsArray.length > 0) {
                            var minYear = Math.min(...yearsArray);
                            var maxYear = Math.max(...yearsArray);
                
                            document.getElementById('minYear').value = minYear;
                            document.getElementById('maxYear').value = maxYear;
                        } else {
                            minYear = 1900;
                            maxYear = 2024;
                                            
                            document.getElementById('minYear').value = minYear;
                            document.getElementById('maxYear').value = maxYear;
                        }
                    });
                </script>
            </form>
        </div>
        <div class="filmesdetal">
            <h2 style="color:#e5e5e5"> Результат пошуку:</h2>
            <div class="film-container">
                <ul id="search-result-list" style=" margin-left: 10px; color: #b7b6b6">
                    @if (Model.Count == 0)
                    {
                        <h2 class="NANfilter">Фільми за даними фільтрами не знайдено</h2>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            var path = item.image_path;
                            var movie = item.name;
                            var idfilm = item.id;
                            @using (Html.BeginForm("FilmView", "Home", new { filmId = idfilm }))
                            {
                                <li class="film-data">
                                    <button class="image-cont">
                                        <img class="image-name" style="border-radius: 20px" src="@path">
                                        <div class="overlay">
                                            <div class="text">@movie</div>
                                        </div>
                                    </button>
                                </li>
                            }
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</div>